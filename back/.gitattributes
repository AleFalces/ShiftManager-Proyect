* text=auto

# Archivos de código fuente siempre con LF
*.js     text eol=lf
*.ts     text eol=lf
*.jsx    text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.md     text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf

# Archivos binarios se mantienen como están
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.pdf    binary
*.woff   binary
*.woff2  binary
*.ttf    binary
*.eot    binary

# Archivos de configuración de Git
.gitattributes  text eol=lf
.gitignore      text eol=lf
